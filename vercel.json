{
    "rewrites": [
      { "source": "/(.*)", "destination": "/api/index.js" }
    ],
    "functions": {
        "api/index.js": {
          "includeFiles": "wp/**",
          "maxDuration": 60
        },
        "api/cron.js": {
          "maxDuration": 60
        }
    },
    "build": {
      "env": {
        "NODEJS_AWS_HANDLER_NAME": "handler"
      }
    },
    "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/10 * * * *"
    }
  ]
}